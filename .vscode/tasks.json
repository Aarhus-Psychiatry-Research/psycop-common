{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PR",
            "type": "shell",
            "command": "git push && inv create-pr",
            "group": "test",
            "dependsOn": [
                "Lint",
                "Test",
                "Static type check",
                "Merge main"
            ],
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            }
        },
        {
            "label": "Merge main",
            "type": "shell",
            "command": "inv merge-main && git push",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "inv lint",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "inv qtest",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            },
            "dependsOn": [
                "Lint",
                "Merge main"
            ]
        },
        {
            "label": "Static type check",
            "type": "shell",
            "command": "inv qtypes",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            },
            "dependsOn": [
                "Lint",
                "Merge main"
            ]
        }
    ]
}