{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PR",
            "type": "shell",
            "command": "All done!",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Lint",
                "Test",
                "Actions requiring input",
            ],
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
            },
            "problemMatcher": []
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "inv lint --auto-fix",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
                "close": true,
            },
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "inv qtest",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
                "close": true,
            },
        },
        {
            "label": "Actions requiring input",
            "type": "shell",
            "command": "inv qtypes && inv prompt-to-submit-pr",
            "presentation": {
                "group": "pr",
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "clear": true,
                "showReuseMessage": false,
                "close": true,
            },
        }
        {
            "label": "Static type check",
            "type": "shell",
            "command": "inv qtypes",
            "presentation": {
                "reveal": "always",
                "group": "pr",
                "clear": true,
                "showReuseMessage": false,
                "close": true,
            },
        }
    ]
}